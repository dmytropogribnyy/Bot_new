# ============================================
# Binance Futures Bot v2.2 - Environment Variables
# ============================================

# === Binance API Configuration ===
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true                      # true для тестнета, false для продакшена

# === Telegram Configuration ===
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# === Trading Mode ===
DRY_RUN=true                              # true = симуляция, false = реальная торговля

# === Position Management ===
MAX_POSITIONS=3                           # Макс. кол-во одновременных позиций
MAX_CONCURRENT_POSITIONS=3                # Альтернативное название для MAX_POSITIONS
MIN_POSITION_SIZE_USDT=10.0              # Мин. размер позиции в USDT
MAX_POSITION_SIZE_USDT=100.0             # Макс. размер позиции в USDT
LEVERAGE_DEFAULT=5                        # Дефолтное плечо

# === Risk Management (TP/SL) ===
STOP_LOSS_PERCENT=2.0                     # Дефолтный стоп-лосс (%)
TAKE_PROFIT_PERCENT=1.5                   # Дефолтный тейк-профит (%)
STEP_TP_LEVELS=0.004,0.008,0.012         # Уровни частичного закрытия
STEP_TP_SIZES=0.5,0.3,0.2                # Размеры закрытия на каждом уровне

# === Stage D: Order Configuration ===
WORKING_TYPE=MARK_PRICE                   # MARK_PRICE или CONTRACT_PRICE
TP_ORDER_STYLE=limit                      # limit или market

# === Stage F: Advanced Risk Management ===
MAX_SL_STREAK=3                           # Макс. стоп-лоссов подряд
DAILY_DRAWDOWN_PCT=3.0                    # Макс. дневная просадка (%)
ENABLE_STAGE_F_GUARD=true                 # Включить Stage F защиту

# === Capital & Margin Settings ===
MAX_CAPITAL_UTILIZATION_PCT=0.8          # Макс. использование капитала (0.8 = 80%)
MAX_MARGIN_PERCENT=0.4                    # Макс. маржа (0.4 = 40%)
MAX_SLIPPAGE_PCT=0.02                     # Макс. проскальзывание (0.02 = 2%)
RISK_MULTIPLIER=1.0                       # Множитель риска (1.0 = стандартный)

# === Logging Configuration ===
LOG_LEVEL=INFO                            # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true                          # Логи в файл
LOG_TO_CONSOLE=true                       # Логи в консоль

# === WebSocket Settings ===
WS_RECONNECT_INTERVAL=5                   # Интервал переподключения (сек)
WS_HEARTBEAT_INTERVAL=30                  # Интервал heartbeat (сек)

# === Optional: Additional Settings ===
# STAGE_F_STATE_PATH=data/runtime/stage_f_state.json
# LOG_VERBOSITY=CLEAN
# TELEGRAM_ENABLED=true
